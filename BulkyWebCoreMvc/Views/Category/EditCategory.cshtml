@model BulkyWebCoreMvc.Models.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>
            Edit Category
        </h2>
    </div>
    <hr />
    <div class="row">
        <div class="border p-3">
            <form method="post" asp-action="EditCategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3 p-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-2">
                    <label asp-for="DisplayOrder" class="control-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6"> <input type="submit" value="Update" class="btn btn-primary form-control" /></div>

                    <div class="col-6"><a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a></div>

                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
