@model IEnumerable<BulkyWebCoreMvc.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary ">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create Category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>Action</th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(u=>u.DisplayOrder)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                <div class="btn-group text-center" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                    </a>
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>