@page
@model BulkyWebRazorCore.Pages.Categories.DeleteCategoryModel


<div class="container">
    <div class="row">
        <h2>
            Delete Category
        </h2>
    </div>
    <hr />
    <div class="row">
        <div class="border p-3">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="category.Id" />
                <div class="row mb-3 p-2">
                    <label asp-for="category.Name" class="control-label"></label>
                    <input asp-for="category.Name" class="form-control" disabled />

                </div>
                <div class="row mb-3 p-2">
                    <label asp-for="category.DisplayOrder" class="control-label"></label>
                    <input asp-for="category.DisplayOrder" class="form-control" disabled />

                </div>
                <div class="row">
                    <div class="col-6"> <input type="submit" value="Delete" class="btn btn-danger form-control" /></div>

                    <div class="col-6"><a asp-page="/Index" class="btn btn-outline-secondary border form-control">Back to List</a></div>

                </div>
            </form>
        </div>
    </div>
</div>

