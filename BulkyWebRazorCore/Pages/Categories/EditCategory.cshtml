@page
@model BulkyWebRazorCore.Pages.Categories.EditCategoryModel


<div class="container">
    <div class="row">
        <h2>
            Edit Category
        </h2>
    </div>
    <hr />
    <div class="row">
        <div class="border p-3">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Category.Id"/>
                <div class="row mb-3 p-2">
                    <label asp-for="Category.Name" class="control-label"></label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-2">
                    <label asp-for="Category.DisplayOrder" class="control-label"></label>
                    <input asp-for="Category.DisplayOrder" class="form-control" />
                    <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6"> <input type="submit" value="Update" class="btn btn-primary form-control" /></div>

                    <div class="col-6"><a asp-page="/Index" class="btn btn-outline-secondary border form-control">Back to List</a></div>

                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

