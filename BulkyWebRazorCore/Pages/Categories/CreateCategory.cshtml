@page
@model BulkyWebRazorCore.Pages.Categories.CreateCategoryModel


<div class="container">
    <div class="row">
        <h2>
            Create category
        </h2>
    </div>
    <hr />
    <div class="row">
        <div class="border p-3">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3 p-2">
                    <label asp-for="category.Name" class="control-label">Category name</label>
                    <input asp-for="category.Name" class="form-control" />
                    <span asp-validation-for="category.Name" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-2">
                    <label asp-for="category.DisplayOrder" class="control-label">Display Order</label>
                    <input asp-for="category.DisplayOrder" class="form-control" />
                    <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6"> <input type="submit" value="Create" class="btn btn-primary form-control" /></div>

                    <div class="col-6"><a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control">Back to List</a></div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}